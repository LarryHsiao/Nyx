<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.haibin.calendarview.CalendarLayout
        android:layout_width="match_parent"
        app:default_status="shrink"
        android:layout_height="match_parent">

        <com.haibin.calendarview.CalendarView
            android:layout_width="match_parent"
            android:id="@+id/jots_calendarView"
            android:layout_height="wrap_content" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:id="@+id/jots_recyclerView"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@android:layout/simple_list_item_1"
                android:layout_height="match_parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:padding="16dp"
                android:visibility="gone"
                tools:visibility="visible"
                android:id="@+id/jots_newJot_textView"
                app:drawableStartCompat="@drawable/ic_plus"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:text="@string/New_Jot"
                android:layout_height="wrap_content"/>
            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/jots_loadingBar"
                android:visibility="gone"
                tools:visibility="visible"
                android:layout_height="wrap_content"/>
        </FrameLayout>
    </com.haibin.calendarview.CalendarLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/jots_newJot_floatingActionButton"
        android:layout_margin="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="#ff0000"
        android:src="@drawable/ic_plus"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>