<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">

    <ImageView
        android:src="@drawable/ic_coffee"
        android:layout_width="55dp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/itemSupportCoffee_image"
        android:layout_height="55dp" />


    <TextView
        app:layout_constraintStart_toEndOf="@id/itemSupportCoffee_image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="0dp"
        android:id="@+id/itemSupportCoffee_text"
        android:layout_margin="16dp"
        android:text="@string/want_to_support_this_app"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Body2"
        android:layout_height="wrap_content" />

    <Button
        android:layout_width="wrap_content"
        android:layout_margin="16dp"
        android:text="@string/support"
        app:layout_constraintTop_toBottomOf="@id/itemSupportCoffee_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="wrap_content" />

</androidx.constraintlayout.widget.ConstraintLayout>