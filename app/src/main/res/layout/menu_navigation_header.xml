<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/navigation_root"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="0dp"
        android:src="@drawable/bg_material"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="0dp" />

    <ImageView
        android:layout_width="50dp"
        android:src="@drawable/ic_user"
        android:layout_margin="16dp"
        android:id="@+id/navHeader_userIcon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_height="50dp" />

    <TextView
        android:layout_width="0dp"
        app:layout_constraintStart_toEndOf="@id/navHeader_userIcon"
        app:layout_constraintTop_toTopOf="@id/navHeader_userIcon"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Email\nName\nLog in"
        app:autoSizeTextType="uniform"
        android:lines="2"
        android:maxLines="2"
        android:autoSizeMinTextSize="1dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:id="@+id/navHeader_info"
        android:textColor="#fff"
        app:layout_constraintBottom_toBottomOf="@id/navHeader_userIcon"
        android:layout_height="wrap_content" />
</androidx.constraintlayout.widget.ConstraintLayout>