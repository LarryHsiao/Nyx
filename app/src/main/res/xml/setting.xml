<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <SwitchPreference
        android:id="@+id/preference_preloadLocation"
        android:icon="@drawable/ic_location_2"
        android:title="@string/preload_location"
        android:key="@string/prefKey_preloadLocation" />
    <SwitchPreference
        android:id="@+id/preference_bioAuth"
        android:icon="@drawable/ic_fingerprint"
        android:key="@string/prefKey_fingerprintAuth"
        android:title="@string/fingerprint_auth" />

    <SwitchPreference
        android:id="@+id/preference_webAccess"
        android:icon="@drawable/ic_web"
        android:key="@string/prefKey_webAccess"
        android:title="@string/web_access" />

    <Preference
        android:title="@string/internal_file_explorer"
        android:icon="@drawable/ic_folder">
        <intent
            android:targetPackage="com.larryhsiao.nyx"
            android:targetClass="com.larryhsiao.nyx.view.internals.BrowserActivity"
            />
    </Preference>

    <Preference
        android:title="@string/backups"
        android:icon="@drawable/ic_restore">
        <intent
            android:targetPackage="com.larryhsiao.nyx"
            android:targetClass="com.larryhsiao.nyx.view.backup.RestoreActivity" />
    </Preference>

    <Preference
        android:title="@string/support_this_app"
        android:icon="@drawable/ic_coffee">
        <intent
            android:targetPackage="com.larryhsiao.nyx"
            android:targetClass="com.larryhsiao.nyx.subscription.SponsorActivity" />
    </Preference>
</PreferenceScreen>