<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:id="@+id/account_driveBackupContainer"
        android:layout_height="wrap_content"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <ImageView
            android:layout_width="90dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="16dp"
            android:src="#000"
            android:id="@+id/account_icon"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_height="90dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/account_info"
            android:layout_margin="16dp"
            tools:text="User: User Name"
            app:layout_constraintStart_toEndOf="@id/account_icon"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            app:layout_constraintTop_toTopOf="@id/account_icon"
            android:layout_height="wrap_content"/>

        <Button
            android:layout_width="wrap_content"
            android:id="@+id/account_login_logout"
            android:layout_marginTop="16dp"
            android:text="@string/login"
            app:layout_constraintStart_toStartOf="@id/account_info"
            app:layout_constraintTop_toBottomOf="@id/account_info"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:id="@+id/account_jot_statics"
            app:layout_constraintTop_toBottomOf="@id/account_login_logout"
            android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>